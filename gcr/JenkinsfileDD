pipeline {
    agent any
     
    stages {
        stage ('checkout'){
            steps {
                git branch: 'master', url: 'https://github.com/jahmed-wq/jar.git'
            }
        }
      
 
    stage('Get creds from GKE cluster') {
	 steps {
    
        sh 'gcloud container clusters get-credentials samples-cluster --zone southamerica-east1-a --project noble-descent-370107'
    }
    }
    
    stage('Pod') {
	 steps {
	 dir('gcr')
			 {
        /* Below command specifies exactly like the command line */
    
        sh 'kubectl $K8_ACTION -f deployment.yaml'
	
    }
    }
    }
    
    
   }
}
